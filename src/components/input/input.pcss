.input {
  display: block;
  position: relative;
}

.textarea {
  position: relative;
  display: flex;
  flex-direction: column;
}

.textarea__elem {
  height: 150px;
  padding: 20px;
  border: 2px solid #000;
  resize: none;
  font-weight: 400;
  // margin-top: 10px;
  width: 100%; 
}

.input__elem {
  width: 100%;
  padding: 17px;
  border: 2px solid #000;
  border-radius: 6px;
}

